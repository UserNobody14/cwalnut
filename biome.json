{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 60,
		"lineEnding": "lf"
	  },
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noUselessElse": "off"
			},
			"recommended": true
		}
	}
}
